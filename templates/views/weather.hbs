<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>

<body>
    {{>navbar}}
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx">

                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">&nbsp;
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>

                <div class="mainInformation">
                    <div class="top_layer">
                        <p id="day">Sunday</p>
                        <p id="today_date">10 AUG</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Result Here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span>0</span> <span class="sup">&deg;</span>C</p>
                            <p id="temp_status"><i class="fa fa-cloud"></i></p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    {{>footer}}

    <script src="js/main.js"></script>
</body>

</html>